{
    "compilerOptions": {
        "experimentalDecorators": true,
        "module": "commonjs",
        "target": "es2019",
        "noImplicitAny": true,
        "moduleResolution": "node",
        "sourceMap": true,
        "outDir": "dist",  // TS文件编译后会放入到此文件夹内
        "baseUrl": ".",
        "paths": {
            "*": [
                "node_modules/*"
            ],
            "aliyun-sdk": ["types/aliyun-sdk"]
        },
        "typeRoots" : ["./node_modules/@types", "./typings"]
    },
    "include": [
        "src/**/*",
        "typings/aliyun-sdk/index.d.ts"
    ]
}